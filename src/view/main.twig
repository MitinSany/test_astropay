{% extends "layout.twig" %}

{% block content %}
<div class="container">
    <form cla="form-inline" method="POST" action="pay">
        <div class="form-group mb-2">
            <label for="inputIduser">user ID</label>
            <input type="text" class="form-control" id="inputIduser" name="inputIduser" placeholder="user ID" value="{{ userid }}">
        </div>
        <div class="form-group mx-sm-3 mb-2">
            <label for="inputAmount">Amount</label>
            <input type="text" class="form-control" id="inputAmount" name="inputAmount" placeholder="Amount" value="{{ amount }}">
        </div>
        <button type="submit" class="btn btn-primary mb-2">Submit</button>
    </form>
</div>
{% endblock %}
